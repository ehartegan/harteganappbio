<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HarteganBioApp.ContactPage"
             Title="Contact Me">
    <ContentPage.Content>
        <StackLayout Spacing="20"
                     Padding="10"
                     BackgroundColor="White">
            <Image
                    Source="ContactPic.jpg"
                    WidthRequest="350"/>

            <Entry x:Name="nameEntry" 
                   Placeholder="Name"
                   PlaceholderColor="Navy"/>

            <Entry x:Name="emailEntry"
                    Placeholder="Email"
                   PlaceholderColor="Navy"/>

            <Label Text="Please enter your message here:"
                   TextColor="Navy"/>
           
            <Editor x:Name="messageEditor"
                    HeightRequest="100"/>

            <Button Text="SUBMIT"
                    BackgroundColor="Navy"
                    TextColor="White" 
                    Clicked="Button_Clicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>